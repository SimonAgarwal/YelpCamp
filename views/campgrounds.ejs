<%- include ("partials/header")%>
<div class="container">
	<div class="jumbotron">
	<h1>
		YelpCamp CampGrounds
</h1>
		<a href="/campgrounds/new" class="btn btn-primary">Add a new campground</a>
	</div>
	
<div class="row" style="display:flex;flex-wrap:wrap;">
	<%for(var i=0;i<campgrounds.length;i++){%>
			<div class="col-md-4">
			<h4><%=campgrounds[i].name%></h4>
				<div class="thumbnail">
					<img style="width:300px;height:200px" src="<%=campgrounds[i].image%>">
				</div>
			
				<p>
		<a class="btn btn-primary" href="/campgrounds/<%=campgrounds[i]._id%>">More Info</a>
	</p>
			</div>
							
<%}%>
	
	</div>
<%- include ("partials/footer")%>